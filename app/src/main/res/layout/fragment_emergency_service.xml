                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_emergency_service_polisi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/emergency_service_tv_polisi"
                        android:padding="12dp"
                        tools:src="@drawable/ic_polisi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:paddingVertical="12dp"
                        android:text="@string/emergency_service_tv_polisi"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/light_blue_500" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_emergency_service_damkar"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/light_blue_500"
